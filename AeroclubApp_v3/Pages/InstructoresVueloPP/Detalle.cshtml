@page
@model ProyHerramientas.Pages.Instructores.DetalleModel
@functions{
    void MostrarFechaExpedicion(DateTime fec){
        <span class="date">@fec.ToString("dd MMMM yyyy")</span>
    }
    
}


<div class="card text-center">
    <div class="card-header">
        Datos del instructor: 
        @Model.InstructorDetalle.Nombre @Model.InstructorDetalle.Apellido
    </div>
    <div class="row g-0"> 
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text"><span class="font-weight-bold">Fecha expedicion licencia: </span>
                    @{ MostrarFechaExpedicion( @Model.InstructorDetalle.FechaExpedicion);}</p>
                    <p class="card-text"><span class="font-weight-bold">DNI:</span> 
                        @Model.InstructorDetalle.DNI</p>
                    <p class="card-text"><span class="font-weight-bold">Legajo:</span>
                        @Model.InstructorDetalle.LegajoVuelo</p>
                    <p class="card-text"><span class="font-weight-bold">T.R.A: </span> 
                        @Model.InstructorDetalle.Tra</p>
                    @* <p class="card-text"><span class="font-weight-bold">Tipo de experiencia: </span> 
                        @Model.InstructorDetalle.Hangar</p> *@
                    <p class="card-text"><span class="font-weight-bold">Hangar asignado: </span> 
                        @Model.InstructorDetalle.Hangar</p>
                    <p class="card-text"><span class="font-weight-bold">En Actividad: </span> 
                        @Model.InstructorDetalle.EnActividad</p>
                </div>
            </div>
       </div>

</div>