@page
@model PrimerParcial.Pages.InstructoresVueloPP.EditarModel
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

  <form method="post">
<div class="form-group">
    <label class="form-label" >ID </label>
        <input class="form-control" asp-for="InstructorEdit.Id" />
        <span class="badge bg-danger" asp-validation-for="InstructorEdit.Id"></span>
    </div>    
    <div class="form-group">
        <label class="form-label" >Legajo de vuelo </label>
        <input  class="form-control" asp-for="InstructorEdit.LegajoVuelo"/>
            <span class="badge bg-danger" asp-validation-for="InstructorEdit.LegajoVuelo"></span>
    </div>
    <div class="form-group">
        <label  class="form-label" >Nombre</label>
        <input class="form-control" asp-for="InstructorEdit.Nombre"/>
            <span class="badge bg-danger" asp-validation-for="InstructorEdit.Nombre"></span>
    </div>
    <div class="form-group">
        <label class="form-label" >Apellido</label>
        <input class="form-control" asp-for="InstructorEdit.Apellido"/>
            <span class="badge bg-danger" asp-validation-for="InstructorEdit.Apellido"></span>
    </div>
    <div class="form-group">
        <label class="form-label" >DNI</label>
        <input class="form-control" asp-for="InstructorEdit.DNI" />
        <span class="badge bg-danger" asp-validation-for="InstructorEdit.DNI"></span>
        <div class="form-check"></div>
    </div>
    <div class="form-group">
        <label class="form-label" >Tipo Registo Aeronautico</label>
        <div class="form-check">
            <label class="form-check-label" >Ultraligero - (ULM)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorEdit.Experiencia" value="1"  />
        </div>
        <div class="form-check">
            <label class="form-check-label" >Privado - (PPL)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorEdit.Experiencia" value="2"  />
        </div>
        <div class="form-check">
            <label class="form-check-label" >Comercial - (CPL)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorEdit.Experiencia" value="3"  />
        </div>
        </div>
        <div class="form-check">
            <label class="form-check-label" >Militar - (FAA)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorEdit.Experiencia" value="3"  />
            <div class="form-check"></div>
        </div>

    </div>
    <div class="form-group">
        <label class="form-label" >Fecha de Expedicion</label>
        <input class="form-control" type="date" asp-for="InstructorEdit.FechaExpedicion" />
    </div>
    <div class="form-group">
        <input class="form-control"  type="submit" value="ACTUALIZAR" />
    </div>
    <div class="form-group">
        <input class="form-control"  type="submit" value="Volver al listado" />
    </div>
</form>

