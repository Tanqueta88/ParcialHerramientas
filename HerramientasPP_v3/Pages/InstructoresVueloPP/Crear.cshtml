 @page
@model PrimerParcial.Pages.CrearModel
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<form method="post">
    <div class="form-group">
        <label class="form-label" >ID </label>
        <input class="form-control" asp-for="InstructorIng.Id" />
        <span class="badge bg-danger" asp-validation-for="InstructorIng.Id"></span>
    </div>    
    <div class="form-group">
        <label class="form-label" >Legajo de vuelo </label>
        <input  class="form-control" asp-for="InstructorIng.LegajoVuelo"/>
        <span class="badge bg-danger" asp-validation-for="InstructorIng.LegajoVuelo"></span>
    </div>
    <div class="form-group">
        <label  class="form-label" >Nombre</label>
        <input class="form-control" asp-for="InstructorIng.Nombre"/>
        <span class="badge bg-danger" asp-validation-for="InstructorIng.Nombre"></span>
    </div>
    <div class="form-group">
        <label class="form-label" >Apellido</label>
        <input class="form-control" asp-for="InstructorIng.Apellido"/>
        <span class="badge bg-danger" asp-validation-for="InstructorIng.Apellido"></span>
    </div>
    <div class="form-group">
        <label class="form-label" >DNI</label>
        <input class="form-control" asp-for="InstructorIng.DNI" />
        <span class="badge bg-danger" asp-validation-for="InstructorIng.DNI"></span>
        <div class="form-check"></div>
    <div class="form-group">
        <label class="form-label" >Tipo Registo Aeronautico</label>
        <div class="form-check">
            <label class="form-check-label" >Ultraligero - (ULM)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorIng.Tra" value="1"  />
        </div>
        <div class="form-check">
            <label class="form-check-label" >Privado - (PPL)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorIng.Tra" value="2"  />
        </div>
        <div class="form-check">
            <label class="form-check-label" >Comercial - (CPL)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorIng.Tra" value="3"  />
        </div>
        </div>

        <div class="form-check">
            <label class="form-check-label" >Militar - (FAA)</label>
            <input class="form-check-input" type="radio" asp-for="InstructorIng.Tra" value="3"  />
            <div class="form-check"></div>
        </div>


    </div>
    <div class="form-group">
        <label class="form-label" >Fecha de Expedicion</label>
        <input class="form-control" type="date" asp-for="InstructorIng.FechaExpedicion" />
    </div>

    <div class="form-group">
        <input class="form-label" asp-for="InstructorIng.EnActividad" />
        <label class="form-control" >Se encuentra en acitividad?</label>
    </div>

    <label for="Hangar-names">Hangar asignado:</label>
        <select name="Hangar" id="Hangar-names">
        <option value="norte">H1N</option>
        <option value="sur">H2S</option>
        <option value="este">H3E</option>
        <option value="oeste">H4O</option>
        <option value="central">H5C</option>
        </select>

    <div class="form-group">
        <input class="form-control"  type="submit" value="GRABAR" />
    </div>
    <div class="form-group">
        <input class="form-control"  type="submit" value="Volver al listado" />
    </div>
</form>